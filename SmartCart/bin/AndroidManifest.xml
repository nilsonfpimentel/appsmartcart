<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartcart"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.smartcart.activities.SigninActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.smartcart.activities.SignupActivity"
            android:label="@string/activity_name_signup" />
        <activity 
            android:name="com.smartcart.activities.MainActivity"
            android:label="@string/activity_name_main" />
        <activity 
            android:name="com.smartcart.activities.UpdateActivity"
            android:label="@string/activity_name_update" />
        
    </application>        
</manifest>
